      li.active
        a(href='javascript:;')
          i.icon-folder-open
          span.title 相关链接
          span.selected
          span.arrow
        ul.sub-menu
          each link, i in links
            if link == selectName
              li.active
                a(href='/doc?selectName=#{link}&tab=links')
                  | #{link}
            else
              li
                a(href='/doc?selectName=#{link}&tab=links')
                  | #{link}
    else
      li
        a(href='javascript:;')
          i.icon-folder-open
          span.title 相关链接
          span.selected
          span.arrow
        ul.sub-menu
          each link, i in links
            li
              a(href='/doc?selectName=#{link}&tab=links')
                | #{link}
    li
      a(href='javascript:;')
        i.icon-map-marker
        span.title 相关链接
        span.arrow
      ul.sub-menu
        each link in links
          li
            a(href='maps_google.html')
              | #{link}
    li.last
      a(href='charts.html')
        i.icon-bar-chart
        span.title 上传文档管理
