.page-sidebar.nav-collapse.collapse
  // BEGIN SIDEBAR MENU
  ul.page-sidebar-menu
    li
      // BEGIN SIDEBAR TOGGLER BUTTON
      .sidebar-toggler.hidden-phone
      // BEGIN SIDEBAR TOGGLER BUTTON
    li
      // BEGIN RESPONSIVE QUICK SEARCH FORM
      form.sidebar-search
        .input-box
          a.remove(href='javascript:;')
          input(type='text', placeholder='Search...')
          input.submit(type='button', value=' ')
      // END RESPONSIVE QUICK SEARCH FORM
    if selectParent == "ADT文档系统介绍"
      li.active
        a(href='/')
          i.icon-home
          span.title ADT文档系统介绍
          span.selected
    else
      li.start
        a(href='/')
          i.icon-home
          span.title ADT文档系统介绍
    - items = ["功能文档","性能文档","自动化测试","安全测试","模块原理","技术规划","问题分析定位"]
    if selectParent == "公共文档"
      li.active
        a(href='javascript:;')
          i.icon-folder-open
          span.title 公共文档
          span.selected
          span.arrow
        ul.sub-menu
          each item, i in items
            if item == selectName
              li.active
                a(href='/doc?selectName=#{item}&tab=public')
                  | #{item}
            else
              li
                a(href='/doc?selectName=#{item}&tab=public')
                  | #{item}
    else
      li
        a(href='javascript:;')
          i.icon-folder-open
          span.title 公共文档
          span.selected
          span.arrow
        ul.sub-menu
          each item, i in items
            li
              a(href='/doc?selectName=#{item}&tab=public')
                | #{item}
    - persons = ["crc","csl","cl","hz","bobe","hj","cjp","nyz","jw","zhy","tzx","gbl","zrs","zw"]
    if selectParent == "个人文档"
      li.active
        a(href='javascript:;')
          i.icon-folder-open
          span.title 个人文档
          span.selected
          span.arrow
        ul.sub-menu
          each person, i in persons
            if person == selectName
              li.active
                a(href='/doc?selectName=#{person}&tab=person')
                  | #{person}
            else
              li
                a(href='/doc?selectName=#{person}&tab=person')
                  | #{person}
    else
      li
        a(href='javascript:;')
          i.icon-folder-open
          span.title 个人文档
          span.selected
          span.arrow
        ul.sub-menu
          each person, i in persons
            li
              a(href='/doc?selectName=#{person}&tab=person')
                | #{person}     
    if selectParent == "新员工学习文档"
      li.active
        a(href='/doc?selectName=newPerson&tab=newPerson')
          i.icon-folder-open
          span.title 新员工学习文档
          span.selected
    else
      li
        a(href='/doc?selectName=newPerson&tab=newPerson')
          i.icon-table
          span.title 新员工学习文档
    if selectParent == "其他文档"
      li.active
        a(href='/doc?selectName=其他文档&tab=other')
          i.icon-folder-open
          span.title 其他文档
          span.selected
    else
      li
        a(href='/doc?selectName=其他文档&tab=other')
          i.icon-table
          span.title 其他文档
    - links = ["局域网链接","外部网链接"]
