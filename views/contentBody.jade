.page-content
  // BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM
  #portlet-config.modal.hide
    .modal-header
      button.close(data-dismiss='modal', type='button')
      h3 portlet Settings
    .modal-body
      p Here will be a configuration form
  // END SAMPLE PORTLET CONFIGURATION MODAL FORM
  // BEGIN PAGE CONTAINER
  .container-fluid
    // BEGIN PAGE HEADER
    .row-fluid
      .span12
        // BEGIN STYLE CUSTOMIZER
        ul.breadcrumb(style="margin-top:20px; margin-bottom:10px;")
          li
            i.icon-home
            a(href='/') 主页
            i.icon-angle-right

          li
            a(href='#') #{selectParent}
            i.icon-angle-right
          li
            a(href='#') #{selectName}
        p(style="float:right")
          a.btn(href="/edit?selectParent=#{selectParent}&selectName=#{selectName}")
            i.icon-plus 添加文章
        // END PAGE TITLE & BREADCRUMB
    // END PAGE HEADER
    // BEGIN PAGE CONTENT
    .row-fluid
      .span12
        ul.timeline
          - each article in articles
            li.timeline-grey
              .timeline-body(style="margin-left:10px;")
                h2 #{articles.tb_title}
                .timeline-content
                  img.timeline-img.pull-left(src='media/image/2.jpg', alt='')
                  |                     #{article.tb_first}
                .timeline-footer
                  a.btn.green.pull-right(href='#')
                    | Read more 
                    i.m-icon-swapright.m-icon-white
    // END PAGE CONTENT
  // END PAGE CONTAINER